
  
- remote_form_for @ticket, :url=> project_tickets_path(@project), :before => "Element.show('spinner')", :complete=> "Element.hide('spinner')", :html=>{:multipart=> true} do |p|
  %p
    %label{ :for => "ticket_title" }= _("Title:")
    %br/
    = p.text_field :title
    = err_for(@ticket, :title)
  #ticket_settings
    %p
      %div{:style=>" float:left;width: 60px; height: 113px; margin-bottom:10px;"}
        %em{:style=> "float:left; margin-top:100px; margin-right:70px"}=_("urgency")
        %div{:class=> "indicator_revert"}
      %table{:style=>"margin-left: 50px;"}
        %tr
          %td
            #priority_7{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(7)"}
          %td
            #priority_8{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(8)"}
          %td
            #priority_9{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(9)"}
        %tr
          %td
            #priority_4{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(4)"}
          %td
            #priority_5{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(5)"}
          %td
            #priority_6{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(6)"}
        %tr
          %td
            #priority_1{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(1)"}
          %td
            #priority_2{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(2)"}
          %td
            #priority_3{:style=>"width: 30px; height:30px", :onclick=>"Popup.choose_color(3)"}
      %div{:style=>"width: 113px; height: 24px; margin-left:60px;margin-bottom:10px;"}
        %div{:class=> "indicator", :style=>"width: 113px; height: 10px"}
        %em{:style=> "margin-top:20px;"}=_("severity")
      =hidden_field_tag "ticket[urgency]", ""
      =hidden_field_tag "ticket[severity]", ""


    %p
      %label{ :for => "ticket_milestone"}= _("Milestone:")
      %br/
      - unless @project.milestones.empty?
        = select :ticket, :milestone_id, @project.milestones.map {|m| [m.name, m.id]}, { :prompt => "-none" }
        = err_for(@ticket, :milestone_id)
      - else
        = _("Your project doesn't have milestones")
    %p
      %label{ :for => "ticket_responable_user_id"}= _("Responsible user:")
      %br/
      = select :ticket, :responsible_id, @project.users.map {|u| [u.email, u.id]}
      = err_for(@ticket, :responsible_id)
  %p
    %label{ :for => "ticket_description" }= _("Description:")
    %br/
    = p.text_area :description, :size=> "80x20"
    = err_for(@ticket, :description)
  %p
    #tags
      %label=_("Add Tags")
      = text_field_tag "tag_list", ""
  = p.submit _("create")
  %br/

  =remote_link _("back"), :url=> project_path(@project), :method=> "get"
