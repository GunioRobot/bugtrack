- remote_form_for @milestone, :url=> project_milestones_path(@project), :before => "Element.show('spinner')", :complete=> "Element.hide('spinner')" do |f|
  %p
    %label=_("Title: ")
    %br/
    = f.text_field :name
    = err_for(@milestone, :name)
  %p
    %label=_("Description: ")
    %br/
    =f.text_area :description, :size=> "40x15"
    = err_for(@milestone, :description)
  %p
    %label=_("Due date: ")
    = date_select(:end_date, "", :order=>[:day,:month,:year])
    = err_for(@milestone, :due_date)
  %p
    = f.submit _("create")
    %br/
    = remote_link _("back"), :url=> project_milestones_path(@project), :method=> :get