%div{:id=>"edit_#{@comment.id}"}
  - remote_form_for :comment, :url => project_ticket_comment_path(@project, @ticket, @comment), :html => { :method => :put, :class => "edit_post", :id => "edit_post_45" } do |f|
    %p
      %label=_('Title')
      %br/
      = f.text_field :title
    %p
      %label=_('Comment')
      %br/
      = f.text_area :comment, :size=>"40x15"
    %p
      = f.submit _("create")
  |
  = link_to_remote _("cancel"), :url=> project_ticket_comment_path(@project, @ticket, @comment), :method=>:put
